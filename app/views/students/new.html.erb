<h1>Sign up</h1>

<section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <%= form_for(@student) do |f| %>
                            <%= render 'shared/std_error_messages' %>
                            
                            <div class="form-group">
                            <%= f.text_field :name, class: 'form-control', placeholder: "Your name"%>
                            </div>

                            <div class="form-group">
                            <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
                            </div>

                            <div class="form-group">
                            <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
                            </div>

                            <div class="form-group">
                            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Re-password" %>
                            </div>

                            <div class="form-group">
                            <%= f.text_field :age, class: 'form-control', placeholder: "Age" %>
                            </div>

                            <div class="form-group">
                            <%= f.text_field :school, class: 'form-control', placeholder: "School" %>
                            </div>

                            <div class="form-group">
                            <%= f.text_field :program_language, class: 'form-control', placeholder: "Programming language" %>
                            </div>

                            <%= f.submit "Create my account", class: "btn btn-primary" %>

                            <%= link_to "Company and Freelancer Signup", companies_new_url %>
                        
                        <% end %>
                    </div>
                    <div class="signup-image">
                        <%= image_tag("signup-image.jpg", :alt => "rss feed") %>
                    </div>
                </div>
            </div>
</section>